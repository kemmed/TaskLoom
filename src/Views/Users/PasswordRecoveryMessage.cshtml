@{
    Layout = "_Layout_NoHeader";
}

<div class="centered-container">
    <div class="message-container">
        <h2>@Html.Raw(ViewBag.message)</h2>

        @if (ViewBag.success)
        {
            <a href="/">Войти</a>
        }
        else if (!ViewBag.success)
        {
            <a href="PasswordRecoveryRequest">Отправить запрос повторно</a>
        }

    </div>
</div>
