@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
 
@{
    Layout = "_Layout_NoHeader";
}
<div class="authReg_background">
    <h2 class="auth-form__title">Регистрация</h2>
    <div class="authReg_window">

        <form asp-action="Create" asp-controller="Users" class="auth-form" name="form-auth" method="post">

            <label class="input-form__label">
                <span class="input-placeholder">имя</span>
                <input class="form__input input-name" name="FName" autocomplete="off" required>
            </label>

            <label class="input-form__label">
                <span class="input-placeholder">фамилия</span>
                <input class="form__input input-name" name="LName" autocomplete="off" required>
            </label>

            <label class="input-form__label">
                <span class="input-placeholder">email</span>
                <input class="form__input input-email" type="email" name="Email" autocomplete="off" required>
            </label>


            <label class="input-form__label">
                <span class="input-placeholder">пароль</span>
                <input class="form__input input-password" type="password" name="HashPass" autocomlete="off" required>
                <div class="auth-form__toggler">
                    <i class="la la-eye auth-form__icon"></i>
                    <input type="checkbox" class="auth-form__checkbox password-toggler">
                </div>
            </label>

            @if (ViewBag.error != null)
            {
                <div class="auth-form__answer">
                    <p class="text-danger">@ViewBag.error</p>
                </div>
            }

            <input class="auth-form__submit" type="submit" value="Создать">

            <div class="auth-form__bottom">
                <span>У вас уже есть аккаунт?</span>
                <a href="/">Войти</a>
            </div>
        </form>

    </div>
</div>

<div class="hint"></div>
