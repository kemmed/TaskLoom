@page 
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout_NoHeader";
}
<div class="authReg_background">
    <h2>Сброс пароля</h2>
    <div class="authReg_window">

        <form asp-action="PasswordRecoveryRequest" asp-controller="Users" class="auth-form" name="form-auth" method="post">

            <label class="input-form__label">
                <span class="input-placeholder">email</span>
                <input class="form__input input-email" type="email" name="Email" autocomplete="off" required >
            </label>

            @if (ViewBag.error != null){
                <div class="auth-form__answer">
                    <p class="text-danger">@ViewBag.error</p>
                </div>
            }

            <input class="auth-form__submit" type="submit" value="Восстановить">

            <div class="auth-form__bottom">
                <a href="/">Вернуться к авторизации</a>
            </div>
        </form>
    </div>
</div>

<div class="hint"></div>
