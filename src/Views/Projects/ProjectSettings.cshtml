@using diplom.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";

    var project = new Project
    {
        ID = 1,
        Name = "Тестовый проект",
        Description = "Это тестовый проект для демонстрации функционала.",
        DeadlineDate = DateTime.Now.AddDays(30),
        CreateDate = DateTime.Now,
        Status = ProjectStatus.InProcess,
        UserProjects = new List<UserProject>
        {
            new UserProject
            {
                User = new User { LName = "Иванов", FName = "Иван", Email = "ivanov@example.com" },
                UserRole = UserRoles.Admin,
                CategoryTypes = new List<CategoryType>
                {
                    new CategoryType { Name = "Фронтенд разработка" },
                    new CategoryType { Name = "Тестирование" }
                }
            },
            new UserProject
            {
                User = new User { LName = "Петров", FName = "Петр", Email = "petrov@example.com" },
                UserRole = UserRoles.Employee,
                CategoryTypes = new List<CategoryType>
                {
                    new CategoryType { Name = "Документирование" }
                }
            },
            new UserProject
            {
                User = new User { LName = "Сидоров", FName = "Алексей", Email = "sidorov@example.com" },
                UserRole = UserRoles.Employee,
                CategoryTypes = new List<CategoryType>() 
            }
        }
    };

    var categories = new List<CategoryType>
    {
        new CategoryType { Name = "Фронтенд разработка" },
        new CategoryType { Name = "Тестирование" },
        new CategoryType { Name = "Документирование" }
    };
}

<div class="settings-container">

    <div class="settings-header">
        <div class="button-a">
            <a href="/Projects/Archive/@project.ID" class="input__submit">Архив задач <i class="las la-archive"></i></i></a>
            <a href="/Projects/History/@project.ID" class="input__submit">История действий <i class="las la-history"></i></a>
            <a href="/Projects/Statistics/@project.ID" class="input__submit">Статистика проекта <i class="las la-chart-bar"></i></a>
            <a href="/Projects/LeaveProject/@project.ID" class="input__submit cancel">Покинуть проект <i class="las la-sign-out-alt"></i></a>
        </div>
    </div>

    <div class="project-details">
        <h2 class="modal-title">Основная информация</h2>
        <form asp-action="UpdateProject" asp-controller="Projects" method="post" class="update-project-container">
            <input type="hidden" name="ProjectID" value="@project.ID" />
            <label class="input-form__label add-project">
                <span class="input-placeholder">Название</span>
                <input class="form__input input-name" name="Name" autocomplete="off" required value="@project.Name">
            </label>
            <label class="input-form__label add-project">
                <span class="input-placeholder">Описание</span>
                <textarea class="form__input form__textarea" name="Description" autocomplete="off">@project.Description</textarea>
            </label>
            <label class="input-form__label">
                <span class="input-placeholder">Статус</span>
                <select class="form__input input-select" name="Status" required>
                    @foreach (var status in Enum.GetValues(typeof(ProjectStatus)))
                    {
                        @* <option value="@status" @(project.Status.ToString() == status.ToString() ? "selected" : "")>
                            @project.ConvertStatus((ProjectStatus)status)
                        </option> *@
                    }
                </select>
            </label>
            <label class="input-form__label add-project">
                <span class="input-placeholder">Срок завершения</span>
                <input class="form__input input-date" type="date" name="DeadlineDate" required value="@project.DeadlineDate.Value.ToString("yyyy-MM-dd")">
            </label>
            <button class="input__submit confirm no-margin">Сохранить изменения <i class="las la-save"></i></button>
        </form>
    </div>

    <div class="users-section">
        <div class="config-title-container">
            <h2 class="config-title">Сотрудники</h2>
            <div class="button-a">
                <a href="#add-user" rel="modal:open" class="input__submit mini">
                    <i class="las la-user-plus"></i>
                </a>
            </div>
        </div>
        <table class="users-table">
            <thead>
                <tr>
                    <th>Имя</th>
                    <th>Категории</th>
                    <th>Почта</th>
                    <th>Роль</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var userProject in project.UserProjects)
                {
                    <tr>
                        <td>@userProject.User.LName @userProject.User.FName</td>
                        <td>
                            @if (userProject.CategoryTypes != null && userProject.CategoryTypes.Any())
                            {
                                <ul class="category-list" >
                                    @foreach (var category in userProject.CategoryTypes)
                                    {
                                        <li>@category.Name </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <span>Нет категорий</span>
                            }
                        </td>
                        <td>@userProject.User.Email</td>
                        <td>@userProject.UserRole <i class="las la-pen"></i></td>
                        <td class="exclude-user">
                            @if (userProject.UserRole != UserRoles.Admin)
                            {
                                <div class="button-a">
                                    <a href="/Projects/ExcludeUser?userId=@userProject.User.ID&projectId=@project.ID" class="input__submit cancel mini">
                                        <i class="las la-user-times"></i>
                                    </a>
                                </div>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="categories-section">
        <div class="config-title-container">
            <h2 class="config-title">Категории задач</h2>
            <div class="button-a">
                <a href="#add-category" rel="modal:open" class="input__submit mini"><i class="las la-plus-circle"></i></a>
            </div>
        </div>
        <div class="categories-list">
            @if (categories.Count == 0)
            {
                <p>Категории задач отсутствуют.</p>
            }
            else
            {
                <ul>
                    @foreach (var category in categories)
                    {
                        <div class="category-item-container">
                        <a class="category-name" href="">
                            <li >@category.Name</li>
                        </a>
                        

                            <div class="button-a">
                            <a href="#delet-category" rel="modal:open" class="input__submit cancel mini"><i class="las la-trash-alt"></i></a>
                            </div>
                        </div>
                    }
                </ul>
            }
        </div>
    </div>


    <form asp-action="AddCategory" asp-controller="Projects" id="add-category" class="modal">
        <div class="modal-container">
            <h1 class="modal-title">Добавить категорию</h1>
            <label class="input-form__label add-project">
                <span class="input-placeholder">Название категории</span>
                <input class="form__input input-name" name="CategoryName" autocomplete="off" required>
            </label>
            <button class="input__submit confirm">Добавить <i class="las la-clipboard-check"></i></button>
        </div>
        <a href="#" rel="modal:close"></a>
    </form>
</div>