@page 
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout_NoHeader";
}

<div class="Input_background">
    <h2>Сброс пароля</h2>
    <div class="Input_window">

        <form asp-action="PasswordRecovery" asp-controller="Users" class="input" name="form-auth" method="post">
            <input type="hidden" name="token" value="@ViewBag.token" />
            <label class="input-form__label">
                <span class="input-placeholder">пароль</span>
                <input class="form__input input-password" type="password" name="HashPass" autocomlete="off" required">
                <div class="input__toggler">
                    <i class="la la-eye input__icon"></i>
                    <input type="checkbox" class="input__checkbox password-toggler">
                </div>
            </label>

            <label class="input-form__label">
                <span class="input-placeholder">подтверждение пароля</span>
                <input class="form__input input-password" type="password" name="HashPassRepeat" autocomlete="off" required>
                <div class="input__toggler">
                    <i class="la la-eye input__icon"></i>
                    <input type="checkbox" class="input__checkbox password-toggler">
                </div>
            </label>

            @if (ViewBag.error != null){
                <div class="input__answer">
                    <p class="text-danger">@ViewBag.error</p>
                </div>
            }

            <button class="input__submit">Сбросить пароль <i class="las la-key"></i></button>

            <div class="input__bottom">
                <a href="/">Вернуться к авторизации</a>
            </div>
        </form>
    </div>
</div>


